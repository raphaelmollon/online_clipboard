# Copy this to .env and fill in the values
# Never commit .env to version control

# Required â€” generate with:
# python -c "import secrets; print(secrets.token_hex(32))"
CLIPBOARD_SERVER_SECRET=replace_with_64_hex_chars_generated_above

# Redis connection (leave as-is for docker-compose setup)
REDIS_URL=redis://redis:6379/0

# Session lifetime in seconds (default: 7200 = 2 hours)
SESSION_TTL_SECONDS=7200

# Rate limiting
RATE_LIMIT_MAX_ATTEMPTS=10
RATE_LIMIT_WINDOW_SECONDS=300
RATE_LIMIT_BAN_SECONDS=3600
RATE_LIMIT_PERM_BAN_THRESHOLD=3

# Max failed password attempts on a single session before locking it
SESSION_MAX_FAILED_ATTEMPTS=20

# Debug mode (set to false in production)
DEBUG=false
